{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }, {
      "source": "/counter",
      "dynamicLinks": true
    }]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
